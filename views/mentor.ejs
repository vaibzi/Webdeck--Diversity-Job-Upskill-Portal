<%layout("boilerplate")%>
    <link rel="stylesheet" href="/css/mentor.css">
    <div class="container" style="display: flex; justify-content: center; align-items: center;">
        <div class="card" style="width: 18rem; ">
            <img class="card-img-top" src="/images/mentorphoto.jpg" alt="Card image cap">
            <div class="card-body">
                <!-- <h5 class="card-title">Find A Mentor</h5> -->
                <p class="card-text">
                    From Hundreds Of Skilled Mentors<br>
                    Find The Best Match For You</p>
                <a href="/mentorlist" class="btn btn-primary">Find A Mentor</a>
            </div>
        </div>
    </div>
    <template class="reply-input-template">
        <div class="reply-input container">
            <img src="/images/images/avatars/image-juliusomo.webp" alt="" class="usr-img">
            <textarea class="cmnt-input" placeholder="Add a comment..."></textarea>
            <button class="bu-primary">SEND</button>
        </div>
    </template>

    <template class="comment-template">
        <div class="comment-wrp">
            <div class="comment container">
                <div class="c-score">
                    <img src="/images/images/icon-plus.svg" alt="plus" class="score-control score-plus">
                    <p class="score-number">5</p>
                    <img src="/images/images/icon-minus.svg" alt="minus" class="score-control score-minus">
                </div>
                <div class="c-controls">
                    <a class="delete"><img src="/images/images/icon-delete.svg" alt="" class="control-icon">Delete</a>
                    <a class="edit"><img src="/images/images/icon-edit.svg" alt="" class="control-icon">Edit</a>
                    <a class="reply"><img src="/images/images/icon-reply.svg" alt="" class="control-icon">Reply</a>
                </div>
                <div class="c-user">
                    <img src="/images/images/avatars/image-maxblagun.webp" alt="" class="usr-img">
                    <p class="usr-name">maxblagun</p>
                    <p class="cmnt-at">2 weeks ago</p>
                </div>
                <p class="c-text">
                    <span class="reply-to"></span>
                    <span class="c-body"></span>
                </p>
            </div><!--comment-->
            <div class="replies comments-wrp">
            </div><!--replies-->
        </div>
    </template>
    <main>
        <div class="comment-section">

            <div class="comments-wrp">

            </div> <!--commentS wrapper-->
            <div class="reply-input container">
                <img src="/images/images/avatars/image-juliusomo.webp" alt="" class="usr-img">
                <textarea class="cmnt-input" placeholder="Add a comment..."></textarea>
                <button class="bu-primary">SEND</button>
            </div> <!--reply input-->
        </div> <!--comment sectio-->

        <div class="modal-wrp invisible">
            <div class="modal container">
                <h3>Delete comment</h3>
                <p>Are you sure you want to delete this comment? This will remove the comment and cant be undone</p>
                <button class="yes">YES,DELETE</button>
                <button class="no">NO,CANCEL</button>
            </div>
        </div>
    </main>